<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_fragment_recipe_comments_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/common_fragment_recipe_comments_vp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/linear_gradient_left_to_right"
        android:gravity="center_vertical"
        android:maxWidth="300dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/common_fragment_recipe_comments_recipe_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHICKEN KOLHAPURI"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_fragment_recipe_comments_food_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BREAKFAST"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="."
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/common_fragment_recipe_comments_cuisine_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDIAN"
                android:textColor="@color/white"
                android:textSize="8sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/common_fragment_recipe_comments_vp"
        android:layout_alignParentRight="true"
        android:background="@drawable/linear_gradient_right_to_left"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/common_fragment_recipe_comments_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="4.8"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/linear_gradient_right_to_left"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_share_white_48dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/common_fragment_recipe_comments_vp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/linear_gradient_left_to_right"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/common_fragment_recipe_comments_username_tv"
                android:maxWidth="270dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vishal Varshney"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:background="@color/gray"
        android:padding="5dp"
        android:layout_below="@id/common_fragment_recipe_comments_vp"
        android:id="@+id/common_fragment_recipe_comments_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:padding="1dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_height="35dp">

        <EditText
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textColorHint="@color/gray"
            android:hint="add your comments .."
            android:textStyle="italic"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@color/white"/>

    </LinearLayout>


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/send"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>