<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/users_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/users_type_user_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/users_type_user_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/users_type_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER NAME"
                android:textColor="@color/secondaryDarkText"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/users_type_user_rank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER RANK"
                android:textColor="@color/tertiaryDarkText"
                android:textSize="@dimen/tertiary_text_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/users_type_recipe_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/users_type_recipe_iv"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/users_type_recipe_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECIPE NAME"
                android:textColor="@color/secondaryDarkText"
                android:textSize="@dimen/tertiary_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/users_type_recipe_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECIPE TYPE"
                    android:textColor="@color/tertiaryDarkText"
                    android:textSize="@dimen/quaternary_text_size" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/users_type_recipe_cuisine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECIPE CUISINE"
                    android:textColor="@color/tertiaryDarkText"
                    android:textSize="@dimen/quaternary_text_size" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_margin="2dp"
        android:id="@+id/users_type_comment_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/users_type_comment_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal|top"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/users_type_comment_user_iv"
                    app:border_color="@color/white"
                    app:border_width="1dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/placeholder" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/users_type_comment_ll"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/users_type_comment_user_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vishal Varshney"
                        android:textColor="@color/primaryDarkText"
                        android:textSize="@dimen/secondary_text_size" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/users_type_comment_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="This recipe made my day. This chef is the best !! Would like to try more from him. I follow this chef and he is good lookig too ;) I do not know what to write here. But i am typing because i want to see how a big comment looks like on the screen."
                    android:textColor="@color/secondaryDarkText"
                    android:textSize="@dimen/tertiary_text_size" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/users_type_comment_likes_iv"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/heart_unselected" />

                    <TextView
                        android:id="@+id/users_type_comment_likes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/users_type_comment_likes_iv"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/tertiaryDarkText"
                        android:textSize="@dimen/tertiary_text_size" />

                    <TextView
                        android:id="@+id/users_type_comment_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="25 Sep at 1:05 AM"
                        android:textColor="@color/tertiaryDarkText"
                        android:textSize="@dimen/tertiary_text_size" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/users_type_review_cv"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="2dp"
        card_view:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:background="@color/white"
            android:padding="5dp"
            android:id="@+id/recipe_view_reviews_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/users_type_review_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal|top">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/users_type_review_user_iv"
                    android:layout_alignParentTop="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/placeholder"
                    app:border_color="@color/white"
                    app:border_width="1dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/users_type_review_ll"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/users_type_review_user_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vishal Varshney"
                    android:textColor="@color/primaryDarkText"
                    android:textSize="10sp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/users_type_review_review_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This recipe made my day. This chef is the best !! Would like to try more from him. I follow this chef and he is good lookig too ;) I do not know what to write here. But i am typing because i want to see how a big comment looks like on the screen."
                    android:textColor="@color/secondaryDarkText"
                    android:textSize="10sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/users_type_review_likes_iv"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/heart_unselected" />


                    <TextView
                        android:id="@+id/users_type_review_likes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/users_type_review_likes_iv"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/tertiaryDarkText"
                        android:textSize="@dimen/tertiary_text_size" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/users_type_review_likes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/users_type_review_item_star_1_iv"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/star"/>

                        <ImageView
                            android:id="@+id/users_type_review_item_star_2_iv"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/star"/>

                        <ImageView
                            android:id="@+id/users_type_review_item_star_3_iv"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/star"/>

                        <ImageView
                            android:id="@+id/users_type_review_item_star_4_iv"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/star"/>

                        <ImageView
                            android:id="@+id/users_type_review_item_star_5_iv"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/star"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/users_type_review_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="25 Sep at 1:05 AM"
                        android:textColor="@color/tertiaryDarkText"
                        android:textSize="@dimen/quaternary_text_size" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/users_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="PEOPLE WHO LIKED"
        android:textColor="@color/tertiaryDarkText"
        android:textSize="@dimen/tertiary_text_size" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/users_srl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/users_tv">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/users_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>