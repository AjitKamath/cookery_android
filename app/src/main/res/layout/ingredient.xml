<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/food_type_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/capsule_white"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/food_type_iv"
        android:layout_width="@dimen/header_buttons_dimen"
        android:layout_height="@dimen/header_buttons_dimen"
        android:src="@drawable/food" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/food_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MILK"
        android:textColor="@color/Gray"
        android:textSize="12sp" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/red"
        android:textSize="10sp" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUPS"
        android:textColor="@color/red"
        android:textSize="10sp" />

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_close_grey600_36dp" />


</LinearLayout>