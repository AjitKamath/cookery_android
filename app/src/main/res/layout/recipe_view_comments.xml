<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_comments_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/recipe_comments_image_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipe_comments_recipe_image_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recipe_comments_image_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"/>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_marginTop="5dp"
        android:layout_below="@+id/recipe_comments_image_ll"
        android:id="@+id/recipe_comments_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recipe_comments_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:minHeight="40dp"
        android:padding="1dp">

        <EditText
            android:id="@+id/recipe_comments_comment_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:hint="add your comments .."
            android:maxLength="@integer/comment_text_limit"
            android:minHeight="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="40dp"
            android:textColor="@color/primaryDarkText"
            android:textColorHint="@color/secondaryDarkText"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/recipe_comments_comment_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/send" />

</RelativeLayout>