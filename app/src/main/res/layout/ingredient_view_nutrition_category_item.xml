<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ingredient_view_nutrition_category_item_ll"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        card_view:cardPreventCornerOverlap="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ingredient_view_nutrition_category_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NUTRITION CATEGORY"
                android:textColor="@color/secondaryDarkText"
                android:textSize="@dimen/tertiary_text_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ingredient_view_nutrition_category_item_nutritions_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>