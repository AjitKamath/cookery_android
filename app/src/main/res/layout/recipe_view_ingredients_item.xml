<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/recipe_view_ingredients_item_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/placeholder"
                app:border_color="@color/white"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/recipe_view_ingredients_item_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxWidth="200dp"
                android:text="NOODLES"
                android:textColor="@color/primaryDarkText"
                android:textSize="@dimen/secondary_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipe_view_ingredients_item_qty_tv"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tertiary_text_size"
                android:maxLength="2"
                android:textColor="@color/secondaryDarkText"
                android:text="1"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/recipe_view_ingredients_item_qty_type_tv"
                android:layout_width="wrap_content"
                android:textSize="@dimen/tertiary_text_size"
                android:textColor="@color/secondaryDarkText"
                android:layout_height="wrap_content"
                android:text="TABLESPOON"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/recipe_view_ingredients_item_divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/divider"/>
</LinearLayout>