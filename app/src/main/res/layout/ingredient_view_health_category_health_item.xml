<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/ingredient_view_health_category_health_item_ll"
    android:layout_weight="3">

    <TextView
        android:id="@+id/ingredient_view_health_category_health_item_health_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tertiary_text_size"
        android:textColor="@color/secondaryDarkText"
        android:text="#"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ingredient_view_health_category_health_item_health_number_tv"
        android:id="@+id/ingredient_view_health_category_health_item_health_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tertiary_text_size"
        android:textColor="@color/tertiaryDarkText"
        android:text="This is just a test to test how the view appears when there is a long stream of text."/>

</RelativeLayout>