<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_view_mylist_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        card_view:cardPreventCornerOverlap="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/app_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/grid_view_mylist_edit_iv"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="60dp"
                                android:src="@drawable/ic_mode_edit_grey600_36dp" />

                            <ImageView
                                android:id="@+id/grid_view_mylist_delete_iv"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_toRightOf="@+id/grid_view_mylist_edit_iv"
                                android:src="@drawable/ic_delete_grey600_48dp" />

                        </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/grid_view_mylist_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIST 1"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <View
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="0.5dp"
                        android:layout_width="match_parent"
                        android:background="@color/divider" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/grid_view_mylist_item_count_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="21 ITEMS"
                                    android:textColor="@color/white"
                                    android:textSize="8sp" />

                            </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>