<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="2dp"
        card_view:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/home_trends_item_recipe_item_rl"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/home_trends_item_recipe_item_iv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_trends_item_recipe_item_rl"
                android:orientation="vertical"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_trends_item_recipe_item_recipe_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHICKEN KOLHAPURI"
                        android:textColor="@color/secondaryDarkText"
                        android:textSize="@dimen/secondary_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_trends_item_recipe_item_avg_rating_iv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/star_unselected" />

                        <TextView
                            android:id="@+id/home_trends_item_recipe_item_avg_rating_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="@color/secondaryDarkText"
                            android:textSize="@dimen/secondary_text_size" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="by"
                        android:textColor="@color/tertiaryDarkText"
                        android:textSize="@dimen/tertiary_text_size" />

                    <TextView
                        android:id="@+id/home_trends_item_recipe_item_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:text="Vishal Varshney"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/tertiary_text_size" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_trends_item_recipe_item_views_iv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/eye" />

                        <TextView
                            android:id="@+id/home_trends_item_recipe_item_views_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_trends_item_recipe_item_likes_iv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/heart_unselected" />

                        <TextView
                            android:id="@+id/home_trends_item_recipe_item_likes_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_trends_item_recipe_item_comments_iv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/comment_disabled" />

                        <TextView
                            android:id="@+id/home_trends_item_recipe_item_comments_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textSize="@dimen/primary_text_size" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
