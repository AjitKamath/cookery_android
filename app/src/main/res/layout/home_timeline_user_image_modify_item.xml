<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/home_timeline_user_image_modify_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white"
        app:cardCornerRadius="2dp"
        card_view:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/home_timeline_user_image_modify_item_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/home_timeline_user_image_mini"
                        android:id="@+id/common_component_round_image_mini_layout"/>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/common_component_round_image_mini_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerVertical="true"
                                android:id="@+id/home_timeline_user_image_modify_item_who_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WHO"
                                android:textColor="@color/app_color"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/home_timeline_user_image_modify_item_who_tv"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/home_timeline_user_image_modify_item_on_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="changed the profile picture"
                                android:textColor="@color/primaryDarkText"
                                android:textSize="10sp" />

                            <include
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                layout="@layout/home_timeline_options" />

                        </RelativeLayout>

                        <include layout="@layout/home_timeline_datetime" />

                    </LinearLayout>

                </RelativeLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_timeline_user_image_modify_item_photo_iv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/placeholder"
                    app:border_color="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    app:border_width="1dp" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>