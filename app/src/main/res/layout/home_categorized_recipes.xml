<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <LinearLayout
        android:id="@+id/home_categorized_recipes_ll"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:background="@drawable/linear_gradient"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_categorized_recipes_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="TRENDING RECIPES"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="5dp"
        android:layout_below="@+id/home_categorized_recipes_ll"
        android:id="@+id/home_categorized_recipes_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>