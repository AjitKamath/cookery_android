<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="2dp"
            android:id="@+id/common_component_card_timeline_recipe_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:gravity="center">

                <include
                    android:id="@+id/common_component_round_image_micro_layout"
                    layout="@layout/common_component_round_image_micro" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/common_component_card_timeline_recipe_recipe_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="RECIPE"
                    android:textColor="@color/secondaryDarkText"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/common_component_card_timeline_recipe_recipe_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:text="TYPE"
                        android:textColor="@color/tertiaryDarkText"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:text="."
                        android:textColor="@color/tertiaryDarkText"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/common_component_card_timeline_recipe_recipe_cuisine_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:text="CUISINE"
                        android:textColor="@color/tertiaryDarkText"
                        android:textSize="9sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/common_component_card_timeline_recipe_recipe_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/common_component_card_timeline_recipe_ll"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
