<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:id="@+id/users_item_rl"
    android:padding="@dimen/padding"
    android:layout_gravity="center_vertical"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/users_item_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/placeholder"
        app:border_color="@color/white"
        app:border_width="1dp" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/users_item_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/primaryDarkText"
                android:id="@+id/users_item_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/secondary_text_size"
                android:text="Vishal Varshney" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/tertiaryDarkText"
                android:layout_marginLeft="10dp"
                android:id="@+id/users_item_datetime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/quaternary_text_size"
                android:text="2 Oct 2017" />

        </RelativeLayout>

        <TextView
            android:textColor="@color/secondaryDarkText"
            android:id="@+id/users_item_follow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/quaternary_text_size"
            android:text="following" />

    </LinearLayout>

</RelativeLayout>