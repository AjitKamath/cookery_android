<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_fragment_recipe_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:id="@+id/common_fragment_recipe_username_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/common_fragment_recipe_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vishal Varshney"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUPER CHEF"
            android:textColor="@color/DarkGray"
            android:textSize="8sp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/common_fragment_recipe_username_ll"
        android:id="@+id/common_fragment_recipe_vp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

    <LinearLayout
        android:id="@+id/common_fragment_recipe_recipe_ll"
        android:layout_below="@+id/common_fragment_recipe_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxWidth="300dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/common_fragment_recipe_recipe_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHICKEN KOLHAPURI"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_fragment_recipe_food_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BREAKFAST"
                android:textColor="@color/DarkGray"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="."
                android:textColor="@color/DarkGray"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/common_fragment_recipe_cuisine_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDIAN"
                android:textColor="@color/DarkGray"
                android:textSize="8sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_fragment_recipe_recipe_like_view_share_ll"
        android:layout_below="@+id/common_fragment_recipe_recipe_ll"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/common_fragment_recipe_rating_ll"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/common_fragment_recipe_rating_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/common_fragment_recipe_like_ll"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/common_fragment_recipe_like_iv"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/heart_unselected"
                    android:tag="UNSELECTED"/>

                <TextView
                    android:id="@+id/common_fragment_recipe_like_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/eye"
                    android:tag="UNSELECTED"/>

                <TextView
                    android:id="@+id/common_fragment_recipe_views_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/common_fragment_recipe_comments_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="32 COMMENTS"
        android:layout_below="@+id/common_fragment_recipe_recipe_like_view_share_ll"/>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/common_fragment_recipe_comments_tv"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabLayout
                android:id="@+id/common_fragment_recipe_tl"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/white"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/white" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:background="@color/lightgray"
            android:id="@+id/common_fragment_recipe_tab_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>