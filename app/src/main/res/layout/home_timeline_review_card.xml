<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    android:id="@+id/home_timeline_review_card_cv"
    app:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/home_timeline_review_card_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="150"
            android:text="@string/sample_commnet"
            android:textColor="@color/tertiaryDarkText"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_below="@+id/home_timeline_review_card_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_timeline_review_card_review_who_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="150"
                android:text="user"
                android:textColor="@color/primaryDarkText"
                android:textSize="9sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="150"
                android:text=" rated "
                android:textColor="@color/primaryDarkText"
                android:textSize="9sp" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/home_timeline_review_card_review_star_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"/>

            <ImageView
                android:id="@+id/home_timeline_review_card_review_star_2"
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"/>

            <ImageView
                android:id="@+id/home_timeline_review_card_review_star_3"
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"/>

            <ImageView
                android:id="@+id/home_timeline_review_card_review_star_4"
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"/>

            <ImageView
                android:id="@+id/home_timeline_review_card_review_star_5"
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
