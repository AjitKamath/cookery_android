<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:gravity="center_vertical"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">

        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/common_header_navigation_drawer_iv"
            android:layout_width="@dimen/header_buttons_dimen"
            android:layout_height="@dimen/header_buttons_dimen"
            android:background="@drawable/options_small_white" />

        <android.support.v7.widget.SearchView
            android:layout_marginLeft="5dp"
            android:theme="@style/MySearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.design.widget.AppBarLayout>
