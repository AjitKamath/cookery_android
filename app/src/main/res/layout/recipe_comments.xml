<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_comments_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recipe_comments_close_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close_grey600_36dp"
        android:layout_alignParentRight="true"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/recipe_comments_close_iv"
        android:id="@+id/recipe_comments_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:paddingBottom="45dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="1dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:minHeight="40dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/recipe_comments_comment_et"
            android:gravity="left|center_vertical"
            android:minHeight="40dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/primaryDarkText"
            android:textSize="14sp"
            android:textColorHint="@color/secondaryDarkText"
            android:hint="add your comments .."
            android:paddingLeft="5dp"
            android:paddingRight="40dp"
            android:maxLength="@integer/comment_text_limit"
            android:background="@color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/recipe_comments_comment_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/send"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>