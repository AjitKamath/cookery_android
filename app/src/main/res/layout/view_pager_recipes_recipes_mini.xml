<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_pager_recipes_recipes_mini_tv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:text="No Favorite Recipes"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/view_pager_recipes_recipes_mini_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_pager_recipes_recipes_mini_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            android:text="0 Recipes"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:id="@+id/view_pager_recipes_recipes_mini_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </LinearLayout>



</LinearLayout>