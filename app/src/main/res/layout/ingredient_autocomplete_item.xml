<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:id="@+id/autocomplete_ingredient_ll"
    android:padding="@dimen/padding"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/autocomplete_ingredient_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:textColor="@color/secondaryDarkText"
            android:layout_marginLeft="10dp"
            android:id="@+id/autocomplete_ingredient_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secondary_text_size"
            android:text="INGREDIENT" />

        <TextView
            android:textColor="@color/tertiaryDarkText"
            android:textSize="@dimen/tertiary_text_size"
            android:layout_marginLeft="10dp"
            android:id="@+id/autocomplete_ingredient_category_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CATEGORY" />

    </LinearLayout>

</LinearLayout>