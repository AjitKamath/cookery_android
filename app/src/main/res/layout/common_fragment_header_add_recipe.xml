<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/app_color"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/common_fragment_header_add_recipe_rl"
    android:padding="10dp">

    <ImageView
        android:id="@+id/common_fragment_header_add_recipe_close_iv"
        android:layout_width="@dimen/header_buttons_dimen"
        android:layout_height="@dimen/header_buttons_dimen"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_close_white_36dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/common_fragment_header_add_recipe_back_iv"
            android:layout_width="@dimen/header_buttons_dimen"
            android:layout_height="@dimen/header_buttons_dimen"
            android:src="@drawable/ic_arrow_back_white_36dp" />

        <ImageView
            android:id="@+id/common_fragment_header_add_recipe_forward_iv"
            android:layout_width="@dimen/header_buttons_dimen"
            android:layout_height="@dimen/header_buttons_dimen"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arrow_forward_white_36dp" />

    </LinearLayout>


</RelativeLayout>